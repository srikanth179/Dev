					"foldername": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "Binary",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": {
							"value": "@dataset().filename",
							"type": "Expression"
						},
						"folderPath": {
							"value": "@concat('event','/',dataset().foldername)",
							"type": "Expression"
						},
						"fileSystem": "rawzone"
					}
				}
			},
			"dependsOn": [
